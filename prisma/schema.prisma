generator client {
  // --- CORREÇÃO 2: O NOME CORRETO É prisma-client-js ---
  provider = "prisma-client-js"

  // --- CORREÇÃO 3: AJUDA O PRISMA A ENTENDER O ALPINE LINUX ---
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  // Foi usado o prisma 5 ao invés do prisma 7 devido a falta de suporte do prisma 7 com javascript, já que versões mais recentes optam pelo uso do typescript.
  url      = env("DATABASE_URL")
}

model Order {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId      String
  value        Float    @db.Double
  creationDate DateTime
  items        Item[]

  @@map("orders")
}

type Item {
  id        String @map("_id") @db.ObjectId
  productId Int
  quantity  Int
  price     Float  @db.Double
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  email    String @unique
  password String

  @@map("users")
}
